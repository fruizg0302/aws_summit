<div class="col-6">
  <div class="row">
    <div class="container">
      <h2>¡Ya casi! Ahora accede</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, 
                            autofocus: true, 
                            autocomplete: "email", 
                            style: 'display:none',
                            value: "conekta@conekta.com" %>
        </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Contraseña</span>
        </div>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

        <div>
          <%= f.submit "Accede", :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
